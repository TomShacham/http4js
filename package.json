{
  "name": "http4js",
  "version": "1.7.2",
  "description": "A lightweight HTTP toolkit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha --require ts-node/register --watch-extensions ts,tsx 'src/test/**/*.{ts,tsx}'",
    "start": "ts-node index.ts",
    "build": "tsc",
    "prepublishOnly": "rm -rf ./dist && tsc -p ./ --outDir dist/",
    "app": "tsc; node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomshacham/http4js.git"
  },
  "author": "Tom Shacham",
  "license": "ISC",
  "keywords": [
    "http",
    "Server as a Function"
  ],
  "devDependencies": {
    "@types/mocha": "2.2.47",
    "@types/node": "9.4.0",
    "body-parser": "1.18.2",
    "express": "4.16.3",
    "koa": "2.5.0",
    "koa-bodyparser": "4.2.0",
    "mocha": "5.0.0",
    "ts-node": "4.1.0",
    "typescript": "2.4.0"
  }
}
