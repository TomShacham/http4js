{
  "name": "http4js",
  "version": "3.2.0",
  "description": "A lightweight HTTP toolkit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "ts-node src/main/index.ts",
    "test": "mocha --require ts-node/register --watch-extensions ts 'src/test/**/*.ts'",
    "test-ssl": "mocha --require ts-node/register --watch-extensions ts 'src/ssl/**/*.ts'",
    "test-all": "tsc && mocha --require ts-node/register --watch-extensions ts 'src/{test,ssl}/**/*.ts'",
    "build": "tsc",
    "app": "tsc; node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomshacham/http4js.git"
  },
  "author": "Tom Shacham",
  "license": "ISC",
  "keywords": [
    "http",
    "Server as a Function"
  ],
  "devDependencies": {
    "@types/mocha": "2.2.47",
    "@types/node": "9.4.0",
    "body-parser": "1.18.2",
    "express": "4.16.3",
    "koa": "2.5.0",
    "koa-bodyparser": "4.2.0",
    "mocha": "5.0.0",
    "ssl-root-cas": "^1.2.5",
    "ts-node": "4.1.0",
    "typescript": "2.9.2"
  }
}
